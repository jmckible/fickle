%p= link_to '<- Back', @poll

%h1= @poll.name

%h2 Current Participants
- @poll.users.each do |u|
  %p #{u.name} #{u.email}


%h3 Invite Participant

= form [@poll, Caucus.new] do |f|
  = f.fields_for :user do |uf|
    = uf.text_field :email
    = uf.text_field :first_name
    = uf.text_field :last_name
  = f.submit 'Invite'
